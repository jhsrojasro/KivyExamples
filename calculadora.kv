<BotonPersonalizado@Button>:
    font_size: 24
    background_color: (0, 0, 255, 1)

<CalcBoxLayout>:
    id: calculadora
    spacing: 10
    padding: 10
    orientation: "vertical"
    pantalla: entrada
    TextInput:
        id: entrada
        font_size: 24
        multiline: False

    GridLayout:
        cols: 4
        rows: 4
        spacing: 10
        padding: 5
        BotonPersonalizado:
            text: "7"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "8"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "9"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "+"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "4"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "5"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "6"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "-"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "1"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "2"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "3"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "*"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "AC"
            on_press: entrada.text = ""
        BotonPersonalizado:
            text: "0"
            on_press: entrada.text += self.text
        BotonPersonalizado:
            text: "="
            on_press: calculadora.calcular(entrada.text)
        BotonPersonalizado:
            text: "/"
            on_press: entrada.text += self.text

